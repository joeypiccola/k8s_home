{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "joeypiccola"
  ],
  "ignorePaths": [
    "archive/"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/argocd/.+\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/argocd/.+\\.ya?ml$/"
    ]
  },
  "terraform": {
    "managerFilePatterns": [
      "/terraform/.+\\.tf$/"
    ]
  },
  "packageRules": [
    {
      "description": "Auto-approve and merge PRs for semver-based apps",
      "matchFileNames": [
        "argocd/aoa_apps/apps/monitoring/grafana.yaml",
        "argocd/aoa_apps/apps/monitoring/kube-prometheus-stack.yaml",
        "argocd/aoa_apps/apps/argocd.yaml",
        "argocd/aoa_infra/apps/onepassword.yaml",
        "argocd/aoa_infra/apps/external-secrets.yaml",
        "argocd/aoa_infra/apps/cert-manager.yaml"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "requiredStatusChecks": null,
      // "ignoreTests": true,
      "assignees": []
    },
    {
      "description": "Auto-approve and merge PRs for cloudflared (date-based versioning)",
      "matchFileNames": [
        // "argocd/aoa_apps/apps/networking/cloudflared-objects.yaml"
        "argocd/aoa_apps/objects/cloudflared/objects.yaml"
      ],
      "versioning": "regex:^(?<major>\\d{4})\\.(?<minor>\\d{1,2})\\.(?<patch>\\d{1,2})$",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "requiredStatusChecks": null,
      "assignees": []
    },
    {
      "description": "Auto-approve and merge PRs for argocd init container images (the download tools container)",
      "matchFileNames": [
        "argocd/aoa_apps/values/argocd.yaml"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "requiredStatusChecks": null,
      "assignees": []
    }
    // {
    //   "description": "Auto-approve and merge PRs for media apps with pinned digests",
    //   "matchFileNames": [
    //     "argocd/aoa_apps/apps/media/plex.yaml"
    //   ],
    //   "matchDatasources": ["docker"],
    //   "matchUpdateTypes": ["minor", "patch", "digest"],
    //   "automerge": true,
    //   "automergeType": "pr",
    //   "platformAutomerge": true,
    //   "requiredStatusChecks": null,
    //   "assignees": []
    // }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process various dependencies, this is mostly for AVP",
      "managerFilePatterns": [
        "/argocd/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*=?))?\n .*: (?<currentValue>.*=?)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "description": "digest",
      "managerFilePatterns": [
        "/argocd/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)(?:\\s+versioning=(?<versioning>\\S+))?\\s+tag:\\s+(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}docker{{/if}}",
      "depNameTemplate": "{{{depName}}}"
    }
  ]
}

