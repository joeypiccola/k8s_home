{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "joeypiccola"
  ],
  "ignorePaths": [
    "archive/"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/argocd/.+\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/argocd/.+\\.ya?ml$/"
    ]
  },
  "terraform": {
    "managerFilePatterns": [
      "/terraform/.+\\.tf$/"
    ]
  },
  "packageRules": [
    {
      "description": "Auto-approve and merge PRs for grafana.yaml",
      "matchFileNames": [
        "argocd/aoa_apps/apps/monitoring/grafana.yaml"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Auto-approve and merge PRs for kube-prometheus-stack.yaml",
      "matchFileNames": [
        "argocd/aoa_apps/apps/monitoring/kube-prometheus-stack.yaml"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process various dependencies",
      "managerFilePatterns": [
        "/argocd/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*=?))?\n .*: (?<currentValue>.*=?)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
